<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/paginationCC"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favoriteBtn"
                android:text="@string/favorite"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/idRepositoryNameTV"
                app:layout_constraintBottom_toBottomOf="@id/idRepositoryNameTV"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteBtn"
                android:text="@string/delete"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/idRepositoryNameTV"
                app:layout_constraintBottom_toBottomOf="@id/idRepositoryNameTV"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/idRepositoryNameTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Repository Name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/favoriteBtn"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="5dp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/idRepositoryDescriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/idRepositoryNameTV"
                tools:text="@tools:sample/lorem[50]"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="16sp"
                />
            <ImageView
                android:id="@+id/idProfileImageIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/idRepositoryDescriptionTV"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="7dp"
                />
            <TextView
                android:id="@+id/idOwnerNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem[1]"
                app:layout_constraintLeft_toRightOf="@id/idProfileImageIV"
                app:layout_constraintTop_toTopOf="@id/idProfileImageIV"
                app:layout_constraintBottom_toBottomOf="@id/idProfileImageIV"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                app:layout_constraintTop_toTopOf="@id/idProfileImageIV"
                app:layout_constraintBottom_toBottomOf="@id/idProfileImageIV"
                app:layout_constraintRight_toLeftOf="@id/idStarsNumberTV"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/idStarsNumberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5K"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/idProfileImageIV"
                app:layout_constraintBottom_toBottomOf="@id/idProfileImageIV"
                app:layout_constraintRight_toRightOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/paginationCC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/previousPageBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/colorPrimary"
            android:padding="10dp"
            android:background="@drawable/ic_left" />
        <TextView
            android:id="@+id/pageTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:id="@+id/nextPageBtn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/colorPrimary"
            android:padding="10dp"
            android:background="@drawable/ic_right" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

